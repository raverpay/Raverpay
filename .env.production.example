# ============================================
# PRODUCTION ENVIRONMENT - MularPay
# ============================================
# Copy this file to:
# - apps/mularpay-api/.env.production
# - apps/mularpay-web/.env.production
# - apps/mularpay-admin/.env.production
# - apps/mularpay-mobile/.env.production
#
# Then fill in your actual production credentials
# ⚠️ CRITICAL: Use LIVE keys, strong secrets, production URLs

# ============================================
# API (.env.production)
# ============================================

NODE_ENV=production
PORT=3001
APP_NAME=MularPay API

# Database (Supabase Production)
DATABASE_URL="postgresql://user:password@production-host:5432/mularpay_production?schema=public"

# Redis (Upstash Production)
REDIS_URL="rediss://default:password@production-host:port"

# JWT (⚠️ MUST be different from staging)
JWT_SECRET=your-production-jwt-secret-min-64-chars-use-openssl-rand
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-production-refresh-secret-min-64-chars-use-openssl-rand
JWT_REFRESH_EXPIRES_IN=7d

# Encryption (⚠️ MUST be 32 characters, NEVER change after launch)
ENCRYPTION_KEY=your-32-character-production-key

# Paystack (LIVE Keys - requires business verification)
PAYSTACK_SECRET_KEY=sk_live_xxxxxxxxxxxxx
PAYSTACK_PUBLIC_KEY=pk_live_xxxxxxxxxxxxx
PAYSTACK_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# VTPass (LIVE Keys - requires account funding)
VTPASS_API_KEY=your-live-api-key
VTPASS_PUBLIC_KEY=your-live-public-key
VTPASS_SECRET_KEY=your-live-secret-key
VTPASS_BASE_URL=https://api.vtpass.com

# Mono (LIVE Keys - requires business verification)
MONO_SECRET_KEY=live_sk_xxxxxxxxxxxxx
MONO_PUBLIC_KEY=live_pk_xxxxxxxxxxxxx
MONO_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Rate Limiting (stricter in production)
THROTTLE_TTL=60
THROTTLE_LIMIT=60

# CORS (specific origins only)
CORS_ORIGIN=https://mularpay.com,https://www.mularpay.com,https://admin.mularpay.com

# Sentry
SENTRY_DSN=https://xxxxxxxxxxxxx@sentry.io/xxxxxxxxxxxxx

# Webhook
WEBHOOK_BASE_URL=https://api.mularpay.com

# ============================================
# WEB (.env.production)
# ============================================

NEXT_PUBLIC_API_URL=https://api.mularpay.com/api
NEXT_PUBLIC_ENV=production
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_live_xxxxxxxxxxxxx
NEXT_PUBLIC_APP_NAME=MularPay
NEXT_PUBLIC_APP_URL=https://mularpay.com

# ============================================
# ADMIN (.env.production)
# ============================================

NEXT_PUBLIC_API_URL=https://api.mularpay.com/api
NEXT_PUBLIC_ENV=production
NEXT_PUBLIC_APP_NAME=MularPay Admin
NEXT_PUBLIC_APP_URL=https://admin.mularpay.com

# ============================================
# MOBILE (.env.production)
# ============================================

EXPO_PUBLIC_API_URL=https://api.mularpay.com/api
EXPO_PUBLIC_ENV=production
EXPO_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_live_xxxxxxxxxxxxx
EXPO_PUBLIC_APP_NAME=MularPay
EXPO_PUBLIC_APP_VERSION=1.0.0
