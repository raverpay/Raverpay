{
  "name": "raverpay",
  "version": "1.0.0",
  "private": true,
  "description": "Nigerian fintech super-app: Wallet, VTU, Gift Cards, and Crypto Trading",
  "author": "RaverPay",
  "license": "UNLICENSED",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=@raverpay/raverpay-api",
    "dev:mobile": "turbo run dev --filter=@raverpay/raverpay-mobile",
    "start:mobile": "pnpm --filter @raverpay/raverpay-mobile start",
    "ios": "pnpm --filter @raverpay/raverpay-mobile ios",
    "android": "pnpm --filter @raverpay/raverpay-mobile android",
    "mobile:prebuild": "pnpm --filter @raverpay/raverpay-mobile prebuild",
    "dev:web": "turbo run dev --filter=@raverpay/raverpay-web",
    "dev:admin": "turbo run dev --filter=@raverpay/raverpay-admin",
    "build": "turbo run build",
    "build:api": "turbo run build --filter=@raverpay/raverpay-api",
    "build:web": "turbo run build --filter=@raverpay/raverpay-web",
    "build:admin": "turbo run build --filter=@raverpay/raverpay-admin",
    "lint": "turbo run lint --filter=!@raverpay/raverpay-mobile --filter=!@raverpay/raverpay-web",
    "typecheck": "turbo run typecheck --filter=!@raverpay/raverpay-mobile --filter=!@raverpay/raverpay-web",
    "test": "turbo run test --filter=!@raverpay/raverpay-mobile --filter=!@raverpay/raverpay-web",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "prisma:generate": "pnpm --filter @raverpay/raverpay-api prisma:generate",
    "prisma:migrate": "pnpm --filter @raverpay/raverpay-api prisma:migrate",
    "prisma:studio": "pnpm --filter @raverpay/raverpay-api prisma:studio",
    "prisma:seed": "pnpm --filter @raverpay/raverpay-api prisma:seed",
    "deploy:api": "cd apps/raverpay-api && railway up",
    "deploy:admin": "cd apps/raverpay-admin && railway up",
    "deploy:web": "cd apps/raverpay-web && railway up",
    "deploy:all": "pnpm deploy:api && pnpm deploy:admin && pnpm deploy:web",
    "test:email": "node scripts/test-email.js",
    "precommit": "bash scripts/precommit.sh",
    "test:smoke:local": "bash scripts/smoke-tests-local.sh",
    "check:all": "pnpm precommit && pnpm test:smoke:local",
    "start": "pnpm --filter @raverpay/raverpay-admin start",
    "dev:all": "concurrently -n \"API,ADMIN,MOBILE,NGROK\" -c \"blue,green,yellow,magenta\" \"pnpm dev:api\" \"pnpm dev:admin\" \"pnpm start:mobile\" \"sleep 3 && ngrok http 3001\""
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "devDependencies": {
    "turbo": "^2.6.0",
    "nodemailer": "^6.9.8",
    "dotenv": "^16.3.1"
  }
}
