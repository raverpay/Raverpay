# ============================================
# STAGING ENVIRONMENT - MularPay
# ============================================
# Copy this file to:
# - apps/mularpay-api/.env.staging
# - apps/mularpay-web/.env.staging
# - apps/mularpay-admin/.env.staging
# - apps/mularpay-mobile/.env.staging
#
# Then fill in your actual staging credentials

# ============================================
# API (.env.staging)
# ============================================

NODE_ENV=staging
PORT=3001
APP_NAME=MularPay API (Staging)

# Database (Supabase Staging)
DATABASE_URL="postgresql://user:password@staging-host:5432/mularpay_staging?schema=public"

# Redis (Upstash Staging)
REDIS_URL="rediss://default:password@staging-host:port"

# JWT
JWT_SECRET=your-staging-jwt-secret-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-staging-refresh-secret-min-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=your-32-character-staging-key!

# Paystack (Test Keys)
PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxxx
PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxxx
PAYSTACK_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# VTPass (Sandbox)
VTPASS_API_KEY=your-sandbox-api-key
VTPASS_PUBLIC_KEY=your-sandbox-public-key
VTPASS_SECRET_KEY=your-sandbox-secret-key
VTPASS_BASE_URL=https://sandbox.vtpass.com

# Mono (Test Keys)
MONO_SECRET_KEY=test_sk_xxxxxxxxxxxxx
MONO_PUBLIC_KEY=test_pk_xxxxxxxxxxxxx
MONO_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ORIGIN=https://staging.mularpay.com,https://admin-staging.mularpay.com

# Sentry
SENTRY_DSN=https://xxxxxxxxxxxxx@sentry.io/xxxxxxxxxxxxx

# Webhook
WEBHOOK_BASE_URL=https://api-staging.mularpay.com

# ============================================
# WEB (.env.staging)
# ============================================

NEXT_PUBLIC_API_URL=https://api-staging.mularpay.com/api
NEXT_PUBLIC_ENV=staging
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxxx
NEXT_PUBLIC_APP_NAME=MularPay
NEXT_PUBLIC_APP_URL=https://staging.mularpay.com

# ============================================
# ADMIN (.env.staging)
# ============================================

NEXT_PUBLIC_API_URL=https://api-staging.mularpay.com/api
NEXT_PUBLIC_ENV=staging
NEXT_PUBLIC_APP_NAME=MularPay Admin
NEXT_PUBLIC_APP_URL=https://admin-staging.mularpay.com

# ============================================
# MOBILE (.env.staging)
# ============================================

EXPO_PUBLIC_API_URL=https://api-staging.mularpay.com/api
EXPO_PUBLIC_ENV=staging
EXPO_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxxx
EXPO_PUBLIC_APP_NAME=MularPay
EXPO_PUBLIC_APP_VERSION=1.0.0
